<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/VistaNuovaPartita"
    xmlns:margin="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    tools:context="com.example.fernet.easy_fut5al.FragmentNuovaPartita">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/TitoloCreaPartita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:text="Crea una nuova partita"/>

    <TextView
        android:id="@+id/descrizione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textSize="12dp"
        android:text="Crea una nuova partita specificando giorno, orario e campetto"/>


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="Seleziona orario inizio partita:"/>

            <AutoCompleteTextView
                android:id="@+id/casellaorario"
                android:layout_width="50dp"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:text="" />

            <Button
                android:id="@+id/ButtonOk"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:elegantTextHeight="true"
                android:background="@drawable/search"
                android:backgroundTint="@color/colorAccent"
                />


        </LinearLayout>

        <FrameLayout
            android:id="@+id/calendary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


 <LinearLayout
     android:id="@+id/invitatiMenu"
     android:visibility="gone"
     android:orientation="vertical"
     android:layout_marginBottom="56dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView

            android:layout_marginBottom="2dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista Invitati"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorAccent"
            />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:text="Aggiungi Invitati:"/>

            <AutoCompleteTextView
                android:id="@+id/inserisciInvitato"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_marginHorizontal="30dp"
                android:layout_height="wrap_content"
                android:text="" />

     <LinearLayout
         android:orientation="horizontal"
         android:gravity="center_horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/confermaInvitato"
                android:backgroundTint="@color/colorAccent"
                android:text="Invita"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fine"
                android:backgroundTint="@color/colorAccent"
                android:text="Fine"
                />


        </LinearLayout>

         <TextView
             android:textColor="#FFFFFF"
             android:gravity="center"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Invitati selezionati(clicca premuto sul nome per eliminare):"/>


        <LinearLayout
            android:id="@+id/listaInvitati"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>





    </LinearLayout>
    </LinearLayout>

</ScrollView>
