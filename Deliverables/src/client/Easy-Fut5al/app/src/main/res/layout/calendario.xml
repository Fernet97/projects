<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fernet.easy_fut5al.FragmentCalendario">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/TitoloCalendario"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textAlignment="center"
            android:text="CALENDARIO"/>


        <TextView
            android:id="@+id/descrizione"
            android:layout_below="@id/TitoloCalendario"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textSize="12dp"
            android:text="Visualizza il calendario delle prenotazioni di un campetto specificato"/>


        <LinearLayout
            android:id="@+id/l1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/descrizione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textColor="@color/colorAccent"
            android:text="Seleziona Campo:"/>

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="200dp"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:text="" />

            <Button
                 android:id="@+id/ButtonOk"
                 android:layout_width="27dp"
                 android:layout_height="27dp"

                 android:elegantTextHeight="true"
                 android:background="@drawable/search"
                 android:backgroundTint="@color/colorAccent"
             />

        </LinearLayout>

        <CalendarView
            android:id="@+id/calendario"
            android:background="@drawable/background_button"
            android:layout_below="@id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            />



        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorAccent"
            android:layout_below="@id/calendario"
            android:id="@+id/Griglia"
            android:layout_marginBottom="56dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>

    </RelativeLayout>








</ScrollView>
