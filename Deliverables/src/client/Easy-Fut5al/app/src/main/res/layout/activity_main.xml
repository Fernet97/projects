<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#303A3D"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAutentificazione">
    <!--per sfumature #2F3B3B"-->

    <TextView
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Easy\n Fut5al"
        android:textColor="#c78c92"
        android:textSize="50dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:paddingTop="20dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="Login"
            android:background="@drawable/background_button"
            android:textAllCaps="false"
            android:textSize="30dp" />
        <Button
            android:id="@+id/Registrati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="Registrati"
            android:background="@drawable/background_button"
            android:textAllCaps="false"
            android:textSize="30dp" />
    </LinearLayout>



    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sei un gestore di un campetto?"/>
        <Button
            android:id="@+id/RegGestore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrati come gestore"
            android:background="@drawable/background_button"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textSize="20dp" />
    </LinearLayout>



</RelativeLayout>